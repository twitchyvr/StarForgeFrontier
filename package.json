{
  "name": "starforgefrontier",
  "version": "0.1.0",
  "description": "A multiplayer spaceship building and space exploration game with full physics, upgrades and an engaging inâ€‘game economy.",
  "main": "server-optimized.js",
  "scripts": {
    "start": "node server-optimized.js",
    "start:basic": "node server.js",
    "start:enhanced": "node server-enhanced.js",
    "start:optimized": "node server-optimized.js",
    "dev": "NODE_ENV=development node server-optimized.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:server": "jest --selectProjects=server",
    "test:client": "jest --selectProjects=client",
    "test:performance": "jest tests/server/performance-optimization.test.js",
    "lint": "echo \"Linting not configured yet\" && exit 0",
    "build": "echo \"Build completed successfully\" && exit 0",
    "postinstall": "echo \"Dependencies installed successfully\"",
    "health-check": "node healthcheck.js",
    "docker:build": "docker build -t starforgefrontier .",
    "docker:run": "docker run -p 3000:3000 starforgefrontier",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "monitor": "curl -s http://localhost:3000/metrics | grep active_players",
    "load-test": "node utils/load-testing.js ws://localhost:3000",
    "load-test-stress": "node utils/load-testing.js ws://localhost:3000 100 300000",
    "backup": "node scripts/backup.js",
    "deploy:render": "echo \"Render deployment handled by git push to main branch\""
  },
  "dependencies": {
    "bcrypt": "^6.0.0",
    "express": "^4.18.4",
    "sqlite3": "^5.1.7",
    "uuid": "^9.0.1",
    "ws": "^8.18.3"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.6.4",
    "jest": "^30.0.5",
    "jest-environment-jsdom": "^30.0.5",
    "supertest": "^7.1.4"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "keywords": [
    "game",
    "multiplayer",
    "space",
    "spaceship",
    "building",
    "exploration",
    "physics",
    "economy",
    "websocket",
    "nodejs",
    "canvas",
    "html5"
  ],
